#ifndef _SII_TYPES_H
#define _SII_TYPES_H

#ifndef __cplusplus
/* Only C99 compilers know stdbool */
#if (__STDC_VERSION__ >= 199901L)
#include <stdbool.h>
typedef bool bool_t;
#else
typedef enum
{
	false = 0,
	true = (!false)
}bool_t;
#endif
#else
typedef bool bool_t;
#endif

typedef unsigned short port_t; /* This should be defined elsewhere TBD */
typedef unsigned int ipAddr_t; /* This should be defined elsewhere TBD */
typedef unsigned long long ethAddr_t;
typedef void void_t;

#define BOOL_TRUE  true
#define BOOL_FALSE false

