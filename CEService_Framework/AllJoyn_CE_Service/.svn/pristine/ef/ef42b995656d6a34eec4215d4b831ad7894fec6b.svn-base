Import('cenev')
 
if not cenev.has_key('_ALLJOYNCORE_'):
    cenev.Append(LIBS = ['alljoyn'])
    if cenev['BR'] == 'on' :
        brFile = cenev.subst('$DISTDIR') + '/cpp/lib/BundledRouter.o'
        cenev['brobj'] = File(brFile)
        cenev['ajrlib'] = 'ajrouter'
    if cenev['OS'] == 'openwrt':
        cenev.AppendUnique(LIBS = [ 'stdc++', 'pthread' ])

cenev['CE_DISTDIR'] = cenev['DISTDIR'] + '/ce'

cenev.Install('$CE_DISTDIR/inc/alljoyn/ce', cenev.Glob('inc/alljoyn/ce/*.h'))
cenev.Install('$CE_DISTDIR/lib', cenev.SConscript('src/SConscript', exports = ['cenev']))
if cenev['BUILD_SERVICES_SAMPLES'] == 'on':
    cenev.Install('$CE_DISTDIR/bin', cenev.SConscript('samples/SConscript', exports = ['cenev']))

# Build docs
installDocs = cenev.SConscript('docs/SConscript', exports = ['cenev'])
cenev.Depends(installDocs, cenev.Glob('$CE_DISTDIR/inc/alljoyn/ce/*.h'));
